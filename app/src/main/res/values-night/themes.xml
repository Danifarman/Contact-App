<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />
    <style name="ToolbarTheme" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#f00</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="BtnBackground" parent="Widget.Material3.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">180dp</item>
        <item name="android:src">@drawable/addsign</item>
    </style>
</resources>
